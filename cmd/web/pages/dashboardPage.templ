	</form>
	<form class="sortable" hx-post="/items" hx-trigger="end">
		<h2 class="text-xl font-medium">Sunday</h2>
		<div class="htmx-indicator">Updating...</div>
		@mealCard("spaghetti")
		@mealCard("chilli")
		@mealCard("salad")
		@mealCard("burgers")
		@mealCard("fried eggs")
	</form>
</div>
}
}

templ mealCard(name string) {
<div class="px-4 py-2 bg-background border border-ring rounded-sm my-2 select-none">
	<input type="hidden" name="item" value={ name } />{ name }
</div>
}
