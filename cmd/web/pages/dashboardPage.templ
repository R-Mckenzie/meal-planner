	</form>
	<form class="sortable" hx-post="/items" hx-trigger="end">
		<h2 class="text-xl font-medium">Saturday</h2>
		<div class="htmx-indicator">Updating...</div>
		@mealCard("spaghetti")
		@mealCard("chilli")
		@mealCard("salad")
