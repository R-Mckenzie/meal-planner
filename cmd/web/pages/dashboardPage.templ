package pages

import "github.com/R-Mckenzie/mealplanner/cmd/web/layouts"

templ DashboardPage(csrf_token string) {
@layouts.Base(true, csrf_token) {
<div class="w-fit mx-auto flex gap-2">
	<div class="recipes mr-8" hx-trigger="end">
		<h2 class="text-xl font-medium">Recipes</h2>
		<div class="htmx-indicator">Updating...</div>
		@mealCard("spaghetti")
		@mealCard("chilli")
		@mealCard("salad")
		@mealCard("burgers")
		@mealCard("fried eggs")
	</div>
	<form class="sortable" hx-post="/items" hx-trigger="end">
		<h2 class="text-xl font-medium">Monday</h2>
		<div class="htmx-indicator">Updating...</div>
		@mealCard("spaghetti")
		@mealCard("chilli")
		@mealCard("salad")
		@mealCard("burgers")
		@mealCard("fried eggs")
	</form>
	<form class="sortable" hx-post="/items" hx-trigger="end">
		<h2 class="text-xl font-medium">Tuesday</h2>
		<div class="htmx-indicator">Updating...</div>
		@mealCard("spaghetti")
		@mealCard("chilli")
		@mealCard("salad")
		@mealCard("burgers")
		@mealCard("fried eggs")
	</form>
	<form class="sortable" hx-post="/items" hx-trigger="end">
		<h2 class="text-xl font-medium">Wednesday</h2>
		<div class="htmx-indicator">Updating...</div>
		@mealCard("spaghetti")
		@mealCard("chilli")
		@mealCard("salad")
		@mealCard("burgers")
		@mealCard("fried eggs")
	</form>
	<form class="sortable" hx-post="/items" hx-trigger="end">
		<h2 class="text-xl font-medium">Thursday</h2>
		<div class="htmx-indicator">Updating...</div>
		@mealCard("spaghetti")
		@mealCard("chilli")
		@mealCard("salad")
		@mealCard("burgers")
		@mealCard("fried eggs")
	</form>
	<form class="sortable" hx-post="/items" hx-trigger="end">
		<h2 class="text-xl font-medium">Friday</h2>
		<div class="htmx-indicator">Updating...</div>
		@mealCard("spaghetti")
		@mealCard("chilli")
		@mealCard("salad")
